% layout 'default';
% title 'Nutzerinfo';
<h1 class="title"><%= $user->{name} %></h1>

<h2 class="subtitle">Verantwortliche Essen</h2>
<table class="meal-list">
	<tr>
		<th class="column1">Essen</th>
		<th class="column3">Kommentar</th>
	</tr>
	% for my $meal (@{$user->{meals}}) {
		<tr>
			<td class="column1">
				<a href="<%= $meal->{meal_url} %>">
					<%= $meal->{date} %>
				</a>
			    </td>
			    <td class="column3">
				<%= $meal->{comment} %>
			    </td>
		</tr>
	% }
</table>
